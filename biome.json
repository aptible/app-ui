{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "ignore": ["dist", "public/aptible.js"],
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "ignore": ["dist", "public/aptible.js"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
